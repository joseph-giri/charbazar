    <!-- JavaScript Application Logic -->
    <script>
        // --- DATA SOURCE ---
        // Edit this array to add/remove products. 
        // Image logic: Using SVG placeholders for demo. Replace `iconSvg` with `imageUrl: 'path/to/image.jpg'` for real images.

        const products = [
            // FREE FIRE
            {
                id: 'ff-uid',
                title: 'Free Fire Top Up',
                subtitle: 'Via Player ID (UID)',
                category: 'free-fire',
                badge: 'Best Seller',
                badgeColor: 'bg-yellow-100 text-yellow-800',
                price: 'From Rs. 110',
                href: 'https://charibazar.com/product/free-fire-uid-top-up/',
                imageUrl: 'https://res.cloudinary.com/charibazar/image/upload/v1705996643/FreeFire-Charibazar-1-1_2002cb715.png'
            },
            {
                id: 'ff-weekly',
                title: 'Weekly Membership',
                subtitle: 'Lite & Regular',
                category: 'free-fire',
                badge: 'Value',
                badgeColor: 'bg-green-100 text-green-800',
                price: 'Rs. 240',
                href: 'https://charibazar.com/product/free-fire-weekly-membership/',
                imageUrl: 'https://res.cloudinary.com/charibazar/image/upload/v1705996643/FreeFire-Charibazar-1-1_2002cb715.png'
            },
            {
                id: 'ff-level',
                title: 'Level Up Pass',
                subtitle: 'Instant Delivery',
                category: 'free-fire',
                badge: '-80% OFF',
                badgeColor: 'bg-brand-red text-white',
                price: 'Rs. 190',
                href: 'https://charibazar.com/product/level-up-pass/',
                iconClass: 'fa-solid fa-arrow-trend-up text-purple-500'
            },
            {
                id: 'ff-100',
                title: 'Small Pack Diamonds',
                subtitle: 'Direct UID Topup',
                category: 'free-fire',
                price: 'Rs. 115',
                href: 'https://charibazar.com/product/free-fire-uid-top-up/',
                iconClass: 'fa-regular fa-gem text-cyan-400'
            },

            // PUBG
            {
                id: 'pubg-uc',
                title: 'PUBG Mobile UC',
                subtitle: 'Global Top Up',
                category: 'pubg',
                badge: 'Popular',
                badgeColor: 'bg-slate-800 text-white',
                price: 'From Rs. 130',
                href: 'https://charibazar.com/product/pubg-mobile-uc/',
                iconClass: 'fa-solid fa-parachute-box text-yellow-600'
            },
            {
                id: 'pubg-lite',
                title: 'PUBG Mobile Lite',
                subtitle: 'BC Top Up',
                category: 'pubg',
                price: 'From Rs. 90',
                href: '#',
                iconClass: 'fa-solid fa-bolt text-yellow-500'
            },

            // GARENA
            {
                id: 'garena-shells',
                title: 'Garena Shells',
                subtitle: 'Undawn / CODM',
                category: 'garena',
                badge: 'Official',
                badgeColor: 'bg-red-100 text-red-800',
                price: 'From Rs. 100',
                href: 'https://charibazar.com/product/garena-shells-nepal/',
                iconClass: 'fa-solid fa-shell text-red-600'
            },

            // OTHERS / CARDS
            {
                id: 'google-play',
                title: 'Google Play Card',
                subtitle: 'US Region',
                category: 'gift-cards',
                price: 'From Rs. 500',
                href: '#',
                iconClass: 'fa-brands fa-google-play text-green-500'
            },
            {
                id: 'netflix',
                title: 'Netflix Gift Card',
                subtitle: 'Subscription',
                category: 'gift-cards',
                price: 'Various',
                href: '#',
                iconClass: 'fa-solid fa-n text-red-600'
            },
            {
                id: 'roblox',
                title: 'Roblox Robux',
                subtitle: 'Digital Code',
                category: 'others',
                price: 'From Rs. 400',
                href: '#',
                iconClass: 'fa-solid fa-shapes text-slate-700'
            }
        ];

        // Categories Configuration
        const categories = [
            { id: 'all', label: 'All Games', icon: 'fa-solid fa-gamepad' },
            { id: 'free-fire', label: 'Free Fire', icon: 'fa-solid fa-fire' },
            { id: 'pubg', label: 'PUBG', icon: 'fa-solid fa-crosshairs' },
            { id: 'garena', label: 'Garena', icon: 'fa-solid fa-star' },
            { id: 'gift-cards', label: 'Gift Cards', icon: 'fa-solid fa-gift' }
        ];

        // State
        let activeCategory = 'all';
        let searchQuery = '';

        // --- RENDER FUNCTIONS ---

        function renderCategories() {
            const container = document.getElementById('category-container');
            container.innerHTML = categories.map(cat => {
                const isActive = activeCategory === cat.id;
                const baseClass = "flex-shrink-0 px-5 py-2 rounded-full font-medium text-sm transition-all duration-200 cursor-pointer border flex items-center gap-2 select-none";
                const activeClass = "bg-slate-900 text-white border-slate-900 shadow-md transform scale-105";
                const inactiveClass = "bg-white text-slate-600 border-slate-200 hover:bg-slate-50 hover:border-slate-300";

                return `
                    <button 
                        onclick="setCategory('${cat.id}')"
                        class="${baseClass} ${isActive ? activeClass : inactiveClass}">
                        <i class="${cat.icon}"></i> ${cat.label}
                    </button>
                `;
            }).join('');
        }

        function renderProducts() {
            const grid = document.getElementById('product-grid');
            const emptyState = document.getElementById('empty-state');
            const countDisplay = document.getElementById('count-display');

            // Filter Logic
            const filtered = products.filter(p => {
                const matchesCategory = activeCategory === 'all' || p.category === activeCategory;
                const matchesSearch = p.title.toLowerCase().includes(searchQuery.toLowerCase()) ||
                    p.subtitle.toLowerCase().includes(searchQuery.toLowerCase());
                return matchesCategory && matchesSearch;
            });

            // Update Count
            countDisplay.innerText = filtered.length;

            if (filtered.length === 0) {
                grid.innerHTML = '';
                emptyState.classList.remove('hidden');
                return;
            } else {
                emptyState.classList.add('hidden');
            }

            // Generate HTML
            grid.innerHTML = filtered.map(product => {
                return `
                <a href="${product.href}" class="group block bg-white rounded-xl overflow-hidden border border-slate-200 hover:shadow-lg hover:border-brand-red/30 transition-all duration-300 hover:-translate-y-1 h-full flex flex-col fade-in">
                    
                    <!-- Card Header / Image Area -->
                    <div class="relative aspect-square w-full bg-slate-50 flex items-center justify-center overflow-hidden group-hover:bg-brand-light transition-colors">
                        
                        <!-- Badge -->
                        ${product.badge ? `<span class="absolute top-2 left-2 px-2 py-0.5 rounded text-[10px] font-bold uppercase tracking-wide ${product.badgeColor || 'bg-slate-800 text-white'} shadow-sm z-10">${product.badge}</span>` : ''}
                        
                        <!-- Icon or Image -->
                        ${product.imageUrl
                        ? `<img src="${product.imageUrl}" alt="${product.title}" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110">`
                        : `<div class="text-6xl text-slate-400 group-hover:text-brand-red group-hover:scale-110 transition-all duration-300 filter drop-shadow-sm"><i class="${product.iconClass}"></i></div>`
                    }
                    </div>

                    <!-- Card Body -->
                    <div class="p-4 flex flex-col flex-grow">
                        <div class="mb-1">
                            <h3 class="font-bold text-slate-900 text-sm md:text-base leading-tight group-hover:text-brand-red transition-colors line-clamp-2">
                                ${product.title}
                            </h3>
                            <p class="text-xs text-slate-500 mt-1 truncate">${product.subtitle}</p>
                        </div>
                        
                        <div class="mt-auto pt-3 flex items-center justify-between">
                            <span class="font-bold text-slate-800 text-sm">${product.price}</span>
                            <div class="w-8 h-8 rounded-full bg-slate-100 flex items-center justify-center text-slate-600 group-hover:bg-brand-red group-hover:text-white transition-colors">
                                <i class="fa-solid fa-chevron-right text-xs"></i>
                            </div>
                        </div>
                    </div>
                </a>
                `;
            }).join('');
        }

        // --- EVENT HANDLERS ---

        function setCategory(id) {
            activeCategory = id;
            renderCategories();
            renderProducts();
        }

        function setSearch(term) {
            const input = document.getElementById('hero-search');
            input.value = term;
            searchQuery = term;
            renderProducts();

            // Scroll to grid
            document.getElementById('product-grid').scrollIntoView({ behavior: 'smooth', block: 'start' });
        }

        function resetFilters() {
            activeCategory = 'all';
            searchQuery = '';
            document.getElementById('hero-search').value = '';
            renderCategories();
            renderProducts();
        }

        // Init Listeners
        document.getElementById('hero-search').addEventListener('input', (e) => {
            searchQuery = e.target.value;
            renderProducts();
        });

        // Initial Render
        renderCategories();
        renderProducts();

    </script>
    <!-- Bottom Navigation (Mobile) -->
    <div
        class="fixed bottom-0 left-0 z-50 w-full h-16 bg-white border-t border-slate-200 md:hidden flex justify-around items-center px-2 safe-area-pb">
